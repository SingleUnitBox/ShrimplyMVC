@using ShrimplyMVC.Models.Domain;
@using Microsoft.AspNetCore.Identity;
@inject UserManager<IdentityUser> _userManager;
@model Shrimp

@{
    ViewData["Title"] = Model.Name;
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <h3>@Model.Name</h3>

            <div class="mb-3">
                <span>
                    <a id="btnLike" style="cursor: pointer"><i class="bi bi-hand-thumbs-up"></i></a>
                     @ViewData["TotalLikes"] likes
                </span>
            </div>


            <div class="d-flex justify-content-between">
                <span class="text-secondary">@Model.Author</span>
                <span class="text-secondary">@Model.PublishedDate.ToShortDateString()</span>
            </div>

            <div class="mb-3">
                @if (Model.Tags != null && Model.Tags.Any())
                {
                    @foreach (var tag in Model.Tags)
                    {
                        <a asp-controller="Home" asp-action="Tag" asp-route-tagName="@tag.Name">
                            <span class="badge bg-dark">@tag.Name</span>
                        </a>
                    }
                }
            </div>

            <div class="mb-3">
                @Html.Raw(Model.Description)
            </div>

        </div>
    </div>
</div>

@section Scripts
{
    <script>
        const btnLikeElement = document.getElementById('btnLike');

        async function addShrimpLike()
        {
            fetch('/api/ShrimpLike/Add', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': '*/*'
                },
                body: JSON.stringify({ shrimpId : '@Model.Id', userId : '@_userManager.GetUserId(User)' })
            })
            .then(console.log("asa"));
        }

        btnLikeElement.addEventListener('click', addShrimpLike);
    </script>
}

